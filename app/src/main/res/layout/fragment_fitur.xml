<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutFeatures"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biruabu">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:src="@drawable/g4"
        android:contentDescription="Logo aplikasi"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
    <!-- Scroll View -->
    <ScrollView
        android:id="@+id/scrollViewFeatures"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mainCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#FAFAFA"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Long Hair -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardLongHair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#F3F3F3"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Long Hair (Tipe Data: int64)"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kolom ini berisi nilai 0 dan 1, di mana:\n0: Rambut tidak panjang (No)\n1: Rambut panjang (Yes)"
                                android:textSize="16sp"
                                android:textColor="#333333" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Forehead Width -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardForeheadWidth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#F3F3F3"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Forehead Width (Tipe Data: float64)"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/forehead_width_description"
                                android:textSize="16sp"
                                android:textColor="#333333" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Forehead Height -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardForeheadHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#F3F3F3"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Forehead Height (Tipe Data: float64)"
                                android:textColor="#333333"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/forehead_height_description"
                                android:textSize="16sp"
                                android:textColor="#333333" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Nose Wide -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardNoseWide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#F3F3F3"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nose Wide (Tipe Data: int64)"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kolom ini berisi nilai 0 dan 1, di mana:\n0: Hidung tidak lebar (No)\n1: Hidung lebar (Yes)"
                                android:textSize="16sp"
                                android:textColor="#333333" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Nose Long -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardNoseLong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#F3F3F3"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nose Long (Tipe Data: int64)"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kolom ini berisi nilai 0 dan 1, di mana:\n0: Hidung tidak panjang (No)\n1: Hidung panjang (Yes)"
                                android:textSize="16sp"
                                android:textColor="#333333" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Lips Thin -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardLipsThin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#F3F3F3"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lips Thin (Tipe Data: int64)"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kolom ini berisi nilai 0 dan 1, di mana:\n0: Bukan bibir tipis (No)\n1: Bibir tipis (Yes)"
                                android:textSize="16sp"
                                android:textColor="#333333" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Distance Nose to Lip Long -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDistanceNoseToLipLong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#F3F3F3"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Distance Nose to Lip Long (Tipe Data: int64)"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kolom ini berisi nilai 0 dan 1, di mana:\n0: Jarak pendek antara hidung dan bibir (No)\n1: Jarak panjang antara hidung dan bibir (Yes)"
                                android:textSize="16sp"
                                android:textColor="#333333" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Additional content if any -->

        </LinearLayout>
    </ScrollView>

    <!-- Footer Text -->
    <TextView
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:text="© FaceTraits Gender"
        android:textAlignment="center"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
