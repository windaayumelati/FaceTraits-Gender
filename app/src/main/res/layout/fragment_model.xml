<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biruabu">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="185dp"
        android:layout_height="183dp"
        android:src="@drawable/m1"
        android:contentDescription="Logo aplikasi"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Scroll View -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toTopOf="@id/footer"
        android:paddingHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card View for ANN Model and Architecture Information -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FAFAFA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Sub-Judul: ANN -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ANN"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/ungumuda"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Artificial Neural Network)"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/ungumuda"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp" />

                    <!-- Sub Card View: Deskripsi ANN -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="4dp"
                        android:layout_marginTop="8dp"
                        android:background="#F3F3F3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/desc_ann_model"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:justificationMode="inter_word"
                                android:lineSpacingExtra="2dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card View for Accuracy Information -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAccuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FAFAFA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Sub-Judul: Hasil Akurasi Model -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hasil Akurasi Model"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/ungumuda"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp" />

                    <!-- Sub Card View: Hasil Akurasi -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="4dp"
                        android:layout_marginTop="8dp"
                        android:background="#F3F3F3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvAccuracy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="94.74%"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/DarkBlue"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/desc_accuracy_model"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:paddingHorizontal="16dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="16dp"
                                android:justificationMode="inter_word"
                                android:lineSpacingExtra="2dp"
                                android:gravity="center_horizontal" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Footer Text -->
    <TextView
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:text="Â© FaceTraits Gender"
        android:textAlignment="center"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
